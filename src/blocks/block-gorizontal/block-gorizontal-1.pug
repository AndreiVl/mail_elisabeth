mixin block-gorizontal-1(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace :0pt; width:auto !important;")
		tbody
			tr
				td(align="center" style="color:#666666; line-height:0px;" width="203")
					img(src=image_path+data.img, border="0" alt=data.alt width="203" height="274" style="display: block; width: 100%; max-width: 203px; height: auto; margin: 0; border: 0; padding: 0; outline: none;")
			tr
				+td-margin({margin: 'mr-10'})
			tr
				td.text.text--gray.text--upper(align="left" valign="top")!=data.dates
			tr
				+td-margin({margin: 'mr-5'})
			tr
				td.h3(align="left" valign="top")!=data.title
			tr
				+td-margin({margin: 'mr-5'})
			tr
				td.text(align="left" valign="top")!=data.text