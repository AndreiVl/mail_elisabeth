mixin advantage-vertical(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
		tr
			<!-- ID:BR ADVANTAGES IMG -->
			td(align="center" style="line-height: 0px;" width="52")
				img(src=image_path+data.img alt=data.alt width="52" height="52" style="display: block; width: 100%; max-width: 52px; height: auto; margin: 0; border: 0; padding: 0; outline: none;")
		tr
			+td-margin({margin: 'mr-10'})
		tr
			<!-- ID:TXT SUBTITLE -->
			td.text.text--gray.text--upper(align="center")!=data.subtitle
		tr
			<!-- ID:TXT TITLE -->
			td.h3(align="center")!=data.title
		tr
			+td-margin({margin: 'mr-5'})
		tr
			<!-- ID:TXT CONTENT -->
			td.text(align="center")=data.text