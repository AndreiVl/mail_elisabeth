mixin picture-title(data)
	table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="width: 100%; max-width: 100%; border-collapse: collapse; mso-table-lspace: 0pt; mso-table-rspace: 0pt;")
		tr
			td(align="center" style="padding: 17px 17px;")
				table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
					tr
						<!-- ID:BR PICTURE-TITLE IMG -->
						td(align="center" height="15" valign="top" width="298" style="line-height: 0px;")
							img(src=image_path+data.img alt=data.alt width="298" height="300" style="display: block; width: 100%; max-width: 298px; height: auto; margin: 0; border: 0; padding: 0; outline: none;")
					tr
						+td-margin({margin: 'mr-15'})
					tr
						<!-- ID:TXT TOUCH SUBTITLE -->
						td.text-small.text-small--subtitle(align="center")!=data.subtitle
					tr
						<!-- ID:TXT HEADING -->
						td.h3(align="center")!=data.title
